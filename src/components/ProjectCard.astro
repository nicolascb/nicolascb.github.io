---
export interface Props {
  title: string;
  description: string;
  url: string;
  tags?: string[];
}

const { title, description, url, tags = [] } = Astro.props;
---

<li class="project-card">
  <a href={url} target="_blank" rel="noopener noreferrer">
    <h3 class="text-lg font-medium decoration-dashed hover:underline">{title}</h3>
  </a>
  <p>{description}</p>
  {
    tags.length > 0 && (
      <div class="tags mt-2">
        {tags.map((tag: unknown) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )
  }
</li>

<style>
  .project-card {
    @apply my-4 border border-skin-line rounded-md p-4 transition-all hover:shadow-md bg-skin-card bg-opacity-40;
  }
  .tags {
    @apply flex flex-wrap gap-2;
  }
  .tag {
    @apply text-xs bg-skin-card-muted px-2 py-1 rounded-md font-medium;
  }
</style>
